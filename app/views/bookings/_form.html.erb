<%= form_with model: @booking, method: :post do |f| %>
  <% if @booking.errors.any? %>
    <div>
      <h2 class="error-title"> <%= pluralize(@booking.errors.count, 'error' )%> blocked this booking from being saved:</h2>

      <ul>
        <% @booking.errors.each do |error| %>
          <li class="error"><%=error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :booking_option, :value => params[:booking_option] %>
  <%= f.hidden_field :passenger_count, :value => params[:passenger_count] %>
    
  <%= f.fields_for :passengers do |passenger| %>
    <div class="new-passenger">
      <div class="form-field">
        <%= passenger.label :name %>
        <%= passenger.text_field :name,
                                 required: true,
                                 placeholder: 'John Smith'
                                 %>
      </div>
      <div class="form-field">
        <%= passenger.label :email%>
        <%= passenger.email_field :email,
                            required: true,
                            placeholder: 'email@email.com'%>
      </div>
    </div>
    <% end %>
    
  <div class="form-button"><%= f.submit 'Create Booking'%></div>
<% end %>