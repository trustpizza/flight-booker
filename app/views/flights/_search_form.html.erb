<%= form_with model: @flights, class: "grid grow gap-0.5", method: :get do |f| %>
    <div class="flex justify-between items-center">
        <%= f.label "Origin:", class: "text-xl font-extrabold" %>
        <%= f.select(:origin_id,
                 options_for_select(@airport_options, params[:origin_id]),
                 required: true ) %>    
    </div>
        
    <div class="flex justify-between items-center">
        <%= f.label "Destination:", class: "text-xl font-extrabold" %>
        <%= f.select(:destination_id,
                    options_for_select(@airport_options, params[:destination_id]),
                    required: true ) %>
    </div>

    <div class="flex justify-between items-center">
        <%= f.label "Passengers:", class: "text-xl font-extrabold" %>
        <%= f.select(:passenger_count,
                    options_for_select([1, 2, 3, 4], params[:passenger_count]),
                    required: true ) %>
    </div>

    <div class="flex justify-between items-center">
        <%= f.label "Date:", class: "text-xl font-extrabold" %>
        <%= f.date_field :departure_date,
                        value: params[:departure_date],
                        required: true,
                        placeholder: "dd/mm/yyyy" %>
    </div>

    <div class="flex justify-end items-center">
        <%= f.submit "Find Flights", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py02 px-4 rounded border border-black"%>
    </div>
<% end %>